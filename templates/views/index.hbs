<html lang="en">
  
  <head>
    <title>Weather</title>
    <link rel="icon" href="./images/weather.png">
    <link rel="stylesheet" href="./css/styles.css" />
  </head>
  
  <body>

    <div class="main-content">
      {{> header}}
      <p>Use this site to get your weather!</p>

      <form id="weatherForm">
        <input type="text" name="location" id="location" placeholder="Location" />
        <button>Get Weather</button>
      </form> <!-- Close the form here -->

    </div> <!-- Close the div here -->

    <div id="weatherCard" class="card">
      <h2 id="locationResult"></h2>
      <p id="forecastResult"></p>
      <p id="temperatureResult"></p>
      <p id="feelslikeResult"></p>
      <p id="uvIndexResult"></p>
      <p id="humidityResult"></p>
      <p id="windSpeedResult"></p>
      <p id="windDirResult"></p>
    </div>

    <div style="text-align: center">
      {{> footer}}
    </div>
    <script src="./js/app.js"></script>
  </body>

</html>